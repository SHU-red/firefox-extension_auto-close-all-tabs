{
  "manifest_version": 2,
  "name": "Auto Close All Tabs",
  "version": "1.0",
  "description": "Closes all tabs after a specified period of inactivity.",
  "permissions": [
    "tabs",
    "storage",
    "idle"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_title": "Auto Close All Tabs"
  }
}
